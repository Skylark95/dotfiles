# shell
export DOTFILES="$HOME/.dotfiles"
export EDITOR="/usr/bin/vim"
export PYTHON_VENV_NAME=".venv"

# ack
export LC_CTYPE=en_US.UTF-8
export LC_ALL=en_US.UTF-8

# pnpm
export PNPM_HOME="$HOME/.local/share/pnpm"
if [ -d "$PNPM_HOME" ]; then
  case ":$PATH:" in
    *":$PNPM_HOME:"*) ;;
    *) export PATH="$PNPM_HOME:$PATH" ;;
  esac
fi
# pnpm end
